{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "env": {
    "development": {
      "plugins": [
        "@babel/plugin-transform-runtime",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-optional-chaining",
        ["babel-plugin-styled-components", {
          "displayName": true,
          "ssr": false
        }]
      ]
    },
    "production": {
      "plugins": [
        "@babel/plugin-transform-runtime",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-optional-chaining",
        ["babel-plugin-styled-components", {
          "displayName": false,
          "pure": true,
          "ssr": true,
          "minify": true
        }]
      ]
    }
  },
  "plugins": [
    [
      "module-resolver", {
        "root": ["."],
        "alias": {
          "client": "./src/Client/",
          "routes": "./src/Routes/",
          "server": "./src/Server/",
          "components": "./src/Components/",
          "context": "./src/Context/",
          "pages": "./src/Pages/"
        },
        "cwd": "babelrc"
    }]
  ]
 }
